#!/bin/bash
# Script: 4-TCP_and_UDP_ports
# Objectif: Afficher les sockets TCP/UDP en Ã©coute avec PID et nom du programme

echo "Active Internet connections (only servers)"
if ! ss -tulnp 2>/dev/null | grep LISTEN; then
    echo "Error: Failed to list internet sockets." >&2
fi

echo ""
echo "Active UNIX domain sockets (only servers)"
if ! ss -xlnp 2>/dev/null | grep LISTEN; then
    echo "Error: Failed to list UNIX domain sockets." >&2
fi
