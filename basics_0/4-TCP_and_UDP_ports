#!/usr/bin/env bash
# Displays listening TCP/UDP and UNIX domain sockets with associated PID and program name

echo "Active Internet connections (only servers)"
ss -tulnp | grep LISTEN || echo "No listening internet sockets found or command failed."

echo
echo "Active UNIX domain sockets (only servers)"
ss -xlnp | grep LISTEN || echo "No listening UNIX domain sockets found or command failed."
